<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/admin_product_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight=".20"/>

    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight=".60" android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/admin_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="13dp"/>

        <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" >
            <TextView
                android:id="@+id/admin_product_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/admin_product_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="13dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/admin_product_removeBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/baseline_delete_black_24dp" />
</LinearLayout>